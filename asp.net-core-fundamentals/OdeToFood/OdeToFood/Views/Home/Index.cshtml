
@model OdeToFood.ViewModels.HomeIndexViewModel

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title></title>
    </head>
    <body>
        <h1>@Model.CurrentMessage</h1>
        <table cellpadding="3">
            @foreach(var restaurant in Model.Restaurants)
            {
                <tr>
                    <td>@restaurant.Id</td>
                    <td>@restaurant.Name</td>
                    <td>
                        <a href="/home/details/@restaurant.Id">Details</a>
                    </td>
                    <td>
                        @Html.ActionLink("Go", "Details", "Home", new { id=restaurant.Id })
                    </td>                
                    <td>
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@restaurant.Id">More</a>
                    </td>   
                </tr>
            }
        </table>
        <a asp-action="Create">Add Restaurant</a>
    </body>
</html>